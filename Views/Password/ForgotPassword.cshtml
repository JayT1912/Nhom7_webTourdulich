@model Nhom7_webTourdulich.Models.ForgotPassword

@{
    Layout = "~/Views/Shared/_layoutChungLR.cshtml";
}

<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100">
                <form asp-controller="Password" asp-action="ForgotPassword" method="post" class="login100-form validate-form">
                    <span class="login100-form-logo">
                        <i class="zmdi zmdi-lock"></i>
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        Quên mật khẩu
                    </span>

                    <!-- Hiển thị thông báo lỗi nếu có -->
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="Email" class="form-control" placeholder="Nhập email của bạn..." required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Gửi yêu cầu đặt lại mật khẩu</button>

                    <!-- Hiển thị thông báo nếu có -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</body>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
