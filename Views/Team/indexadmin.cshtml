@model IEnumerable<Nhom7_webTourdulich.Models.NhanVien>
@using Microsoft.AspNetCore.Http
@{
    Layout = "_LayoutAdmin";
}
<body>
    <main>

        <!-- Main Content -->
        <div class="content p-4 flex-grow-1">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="text-primary">Quản Lý Nhân Viên</h1>
 <p>
                <a class="btn btn-primary" href="@Url.Action("Create", "Team")">Create New</a>
            </p>            </div>
            <table class="table table-hover table-striped">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col" class="text-center">Hình Ảnh</th>
                        <th scope="col">Họ Tên</th>
                        <th scope="col">Chức Vụ</th>
                        <th scope="col" class="text-center">Facebook</th>
                        <th scope="col" class="text-center">Zalo</th>
                        <th scope="col" class="text-center">Instagram</th>
                        <th scope="col" class="text-center">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var nv in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(nv.HinhAnh))
                                    {
                                        <img src="@nv.HinhAnh" alt="Hình Nhân Viên" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <img src="/img/default.jpg" alt="Default Image" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                </td>
                                <td>@nv.Ten</td>
                                <td>@nv.MaChucVuNavigation?.TenChucVu</td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(nv.LinkFB))
                                    {
                                        <a href="@nv.LinkFB" target="_blank" class="btn btn-primary btn-sm">Facebook</a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(nv.LinkZL))
                                    {
                                        <a href="@nv.LinkZL" target="_blank" class="btn btn-success btn-sm">Zalo</a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(nv.LinkIG))
                                    {
                                        <a href="@nv.LinkIG" target="_blank" class="btn btn-danger btn-sm">Instagram</a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", "Team", new { id = nv.MaNhanVien })" class="btn btn-warning btn-sm">Sửa</a>
<form action="@Url.Action("DeleteConfirmed", "Team", new { id = nv.MaNhanVien })" method="post" style="display:inline;">
    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</button>
</form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">Không có nhân viên nào trong danh sách.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    </main>
</body>
</html>
