@model Nhom7_webTourdulich.Models.NhanVien
@using Microsoft.AspNetCore.Http
@{
    Layout = "_LayoutAdmin";
}

<div class="container mt-4">
    <h1 class="text-center">Thêm Nhân Viên</h1>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Ten" class="form-label">Họ Tên Nhân Viên</label>
            <input type="text" id="Ten" name="Ten" class="form-control" placeholder="Nhập họ tên" required />
        </div>
        <div class="mb-3">
            <label for="MaChucVu" class="form-label">Chức Vụ</label>
            <select id="MaChucVu" name="MaChucVu" class="form-select" required>
                <option value="">-- Chọn Chức Vụ --</option>
                @foreach (var chucVu in ViewBag.ChucVus)
                {
                    <option value="@chucVu.MaChucVu">@chucVu.TenChucVu</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="HinhAnh" class="form-label">Hình Ảnh</label>
            <input type="file" id="HinhAnh" name="file" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="LinkFB" class="form-label">Link Facebook</label>
            <input type="url" id="LinkFB" name="LinkFB" class="form-control" placeholder="Nhập URL Facebook" />
        </div>
        <div class="mb-3">
            <label for="LinkZL" class="form-label">Link Zalo</label>
            <input type="url" id="LinkZL" name="LinkZL" class="form-control" placeholder="Nhập URL Zalo" />
        </div>
        <div class="mb-3">
            <label for="LinkIG" class="form-label">Link Instagram</label>
            <input type="url" id="LinkIG" name="LinkIG" class="form-control" placeholder="Nhập URL Instagram" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Thêm Nhân Viên</button>
            <a href="@Url.Action("indexadmin", "Team")" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>
<style>
    /* General Styling */
body {
    background-color: #f8f9fa; /* Soft neutral background */
    font-family: 'Roboto', sans-serif; /* Modern, clean font */
    margin: 0;
    padding: 0;
    color: #333;
}

/* Container Styling */
.container {
    max-width: 600px;
    margin: 40px auto;
    padding: 20px;
}

/* Form Card Styling */
form {
    background-color: #ffffff; /* White background for contrast */
    border-radius: 10px; /* Rounded corners */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
    padding: 25px;
}

/* Form Heading */
h1 {
    font-size: 24px;
    font-weight: bold;
    color: #007bff; /* Bright blue for accents */
    text-align: center;
    margin-bottom: 20px;
}

/* Labels */
.form-label {
    font-weight: bold;
    color: #007bff;
    margin-bottom: 10px;
}

/* Inputs and Dropdowns */
.form-control, .form-select {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ddd; /* Neutral border */
    box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.1); /* Soft inner shadow */
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-control:focus, .form-select:focus {
    border-color: #007bff; /* Blue highlight for focus */
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Subtle blue glow */
    outline: none;
}

/* Buttons */
.btn {
    font-size: 16px;
    padding: 10px 20px;
    border-radius: 5px;
    font-weight: bold;
    transition: background-color 0.3s ease, transform 0.2s ease;
    cursor: pointer;
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.2); /* Button shadow */
}

.btn-success {
    background-color: #28a745; /* Bright green */
    color: white;
}

.btn-success:hover {
    background-color: #218838; /* Darker green on hover */
    transform: translateY(-3px); /* Slight lift effect */
}

.btn-secondary {
    background-color: #6c757d; /* Neutral grey */
    color: white;
}

.btn-secondary:hover {
    background-color: #5a6268; /* Darker grey on hover */
    transform: translateY(-3px);
}

/* Validation Feedback */
.text-danger {
    font-size: 14px;
    color: #dc3545; /* Bright red for errors */
}

/* File Input Styling */
input[type="file"] {
    border: none;
    background-color: #f8f9fa; /* Soft grey background */
    padding: 10px;
    border-radius: 5px;
}

/* Responsive Design */
media (max-width: 768px) {
    h1 {
        font-size: 20px;
    }

    .btn {
        font-size: 14px;
        padding: 8px 15px;
    }
}
