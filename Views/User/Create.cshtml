@model Nhom7_webTourdulich.Models.User

@{
    ViewData["Title"] = "Thêm người dùng";
    Layout = "_LayoutAdmin";  // Dùng layout admin nếu có, nếu không, có thể bỏ dòng này.
}


<body>
<main>
    <h1>Thêm Người Dùng</h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Role">Vai trò</label>
            <select asp-for="Role" class="form-control">
                <option value="Admin">Admin</option>
                <option value="User">User</option>
                <option value="Manage">Manage</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="DateOfBirth">Ngày sinh</label>
            <input asp-for="DateOfBirth" class="form-control" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber">Số điện thoại</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CreatedAt">Ngày tạo tài khoản</label>
            <input asp-for="CreatedAt" class="form-control" type="date" />
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
        </div>

        <!-- Upload hình ảnh -->
        <div class="form-group">
            <label for="avatar">Ảnh đại diện</label>
            <input type="file" name="Avatar" class="form-control" accept="image/*" onchange="previewImage(event)" />
            <img id="avatarPreview" src="#" alt="Ảnh đại diện" style="display:none; margin-top:10px; max-width:200px;" />
        </div>

        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>

    @section Scripts {
        <script type="text/javascript">
            function previewImage(event) {
                var reader = new FileReader();
                reader.onload = function () {
                    var output = document.getElementById('avatarPreview');
                    output.src = reader.result;
                    output.style.display = 'block';
                };
                reader.readAsDataURL(event.target.files[0]);
            }
        </script>
    }
    </main>
</body>
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa; /* Light gray background */
        margin: 0;
        padding: 0;
    }

    main {
        width: 100%;
        max-width: 800px;
        margin: 50px auto; /* Center alignment */
        background: #fff; /* White form background */
        padding: 20px 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
    }

    h1 {
        text-align: center;
        color: #007bff; /* Primary blue for heading */
        text-transform: uppercase;
        font-size: 24px;
        margin-bottom: 30px;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #555; /* Soft text color for labels */
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        border: 1px solid #ced4da; /* Neutral border */
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #007bff; /* Blue border on focus */
        box-shadow: 0 0 4px rgba(0, 123, 255, 0.5); /* Subtle glow */
    }

    .text-danger {
        font-size: 14px;
        margin-top: 5px;
        color: #dc3545; /* Standard error text color */
    }

    select {
        height: 44px; /* Same height as input fields */
    }

    button {
        width: 100%;
        font-size: 18px;
        padding: 12px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        text-transform: uppercase;
        font-weight: bold;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

    button:hover {
        background-color: #0056b3;
    }

    /* Preview image styles */
    #avatarPreview {
        display: block;
        margin: 20px auto 0;
        border-radius: 10px;
        max-width: 100%; /* Keep image responsive */
        height: auto;
        border: 2px solid #007bff; /* Add a border to the preview */
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1); /* Soft shadow around the image */
    }
</style>
