@model Nhom7_webTourdulich.Models.User
@{
    Layout = "_LayoutAdmin";  // Dùng layout admin nếu có, nếu không, có thể bỏ dòng này.
}
<Body>
    <main>
<h2>Bạn có chắc chắn muốn xóa người dùng này?</h2>
<div>
    <h4>Tên: @Model.Name</h4>
    <h4>Email: @Model.Email</h4>
    <h4>Vai trò: @Model.Role</h4>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
    </main>
</body>
