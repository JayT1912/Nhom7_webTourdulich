@model Nhom7_webTourdulich.Models.Login
@{
    Layout = "~/Views/Shared/_layoutChungLR.cshtml";
}

<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100">
                <form asp-controller="Login" asp-action="Index" method="post" class="login100-form validate-form">
                    <span class="login100-form-logo">
                        <i class="zmdi zmdi-landscape"></i>
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        Log in
                    </span>

                    <!-- Hiển thị lỗi từ ModelState -->
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        <input asp-for="Username" class="input100" type="text" placeholder="Username">
                        <span class="focus-input100" data-placeholder="&#xf207;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <input asp-for="Password" class="input100" type="password" placeholder="Password">
                        <span class="focus-input100" data-placeholder="&#xf191;"></span>
                    </div>

                    <div class="contact100-form-checkbox">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                        <label class="label-checkbox100" for="ckb1">
                            Remember me
                        </label>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-90">
                        <a class="txt1" href="resetpassword.html">
                            Forgot Password?
                        </a>

                        <a class="txt1"href="@Url.Action("ForgotPassword", "Fogot")">
                            &nbsp;&nbsp;&nbsp;Quên mật khẩu?

                        <a class="txt1"href="@Url.Action("Index", "Register")">
                            &nbsp;&nbsp;&nbsp;Đăng ký?
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="dropDownSelect1"></div>
</body>
