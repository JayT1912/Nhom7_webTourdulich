@model Nhom7_webTourdulich.Models.Tour
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<body>
<main>
<h2>Cập Nhật Tour</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Ten">Tên Tour</label>
        <input type="text" class="form-control" id="Ten" name="Ten" value="@Model.Ten" />
    </div>

    <!-- Loại Tour Dropdown -->
    <div class="form-group">
        <label for="MaLoaiTour">Loại Tour</label>
        <select asp-for="MaLoaiTour" class="form-control" asp-items="@(new SelectList(ViewData["MaLoaiTour"] as IEnumerable<SelectListItem>))">
        </select>
    </div>

    <!-- Giá Tour Dropdown -->
    <div class="form-group">
        <label for="MaGiaTour">Giá Tour</label>
        <select asp-for="MaGiaTour" class="form-control" asp-items="@(new SelectList(ViewData["MaGiaTour"] as IEnumerable<SelectListItem>))">
        </select>
    </div>

    <!-- Số Ngày Input -->
    <div class="form-group">
        <label for="SoNgay">Số Ngày</label>
        <input type="number" class="form-control" id="SoNgay" name="SoNgay" value="@Model.SoNgay" />
    </div>

    <!-- Hình ảnh Input -->
    <div class="form-group">
        <label for="HinhAnh">Hình ảnh</label>
        <input type="file" class="form-control" id="HinhAnh" name="HinhAnh" />
        @if (Model.HinhAnh != null)
        {
            <div class="mt-2">
                <img src="@Model.HinhAnh" alt="Current Image" style="width: 150px; height: auto;" />
            </div>
        }
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>
</body>
</main>